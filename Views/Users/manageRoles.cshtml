@model UserRoleViewModel

<form asp-action="updateRoles" method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>@Model.userName</h2>
            Add/Remove Roles
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="id"/>
            @for(int i = 0; i < Model.roles.Count; i++)
            {
                <div>
                    <input type="hidden" asp-for="@Model.roles[i].displayName">
                    <input asp-for="@Model.roles[i].isSelected" class="form-check-input">
                    <label asp-for="@Model.roles[i].isSelected">@Model.roles[i].displayName</label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button class="btn btn-success" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

