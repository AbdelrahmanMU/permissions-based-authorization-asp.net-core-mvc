@model List<IdentityRole>
<partial name="_FormRolePatial" model="new AddRoleViewModel2()"/>

<table class="table table-striped table-bordered mt-4 text-center">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="managePermission" asp-controller="Roles" asp-route-roleId="@role.Id">Manage Permission</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}