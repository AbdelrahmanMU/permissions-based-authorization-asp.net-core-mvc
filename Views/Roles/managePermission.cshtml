@model PermissionsFormViewModel

<form asp-action="managePermission" method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>@Model.roleName</h2>
            Add/Remove Permission
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="id"/>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Module</th>
                        <th>Permission</th>
                    </tr>
                </thead>
                <tbody>
                    @for(int i = 0; i < Model.roleClaims.Count; i++)
                    {
                        <tr>
                            <td>
                                <input type="hidden" asp-for="@Model.roleClaims[i].displayName">
                                <input asp-for="@Model.roleClaims[i].isSelected" class="form-check-input">
                            </td>
                            <td>
                                @Model.roleClaims[i].displayName.Split(".")[1]
                            </td>
                            <td>
                                @Model.roleClaims[i].displayName.Split(".")[2]
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button class="btn btn-success" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

